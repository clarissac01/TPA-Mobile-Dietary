<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSecondary"
    tools:context=".MainIngredients">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/insert_custom_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Add"
        app:icon="@drawable/add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search_ingredients" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMainIngredients"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/beige"
        app:layout_constraintBottom_toTopOf="@+id/ingredient_more_btn"
        app:layout_constraintTop_toBottomOf="@+id/search_ingredients"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/ingredient_more_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SearchView
        android:id="@+id/search_ingredients"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/roundcorner"
        app:layout_constraintEnd_toStartOf="@+id/insert_custom_meal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </SearchView>

</androidx.constraintlayout.widget.ConstraintLayout>
